<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.androidhuman.example.materialdesign"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LowProfileActivity"
            android:label="@string/title_activity_low_profile"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.OverlayActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androidhuman.example.materialdesign.MainActivity"/>
        </activity>
    </application>

</manifest>
